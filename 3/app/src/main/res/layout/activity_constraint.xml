<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstraintActivity">
    <TextView
         android:layout_width="wrap_content"
          android:layout_height="wrap_content"
        android:id="@+id/lin_fname"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        ></TextView>
    <TextView
         android:layout_width="wrap_content"
          android:layout_height="wrap_content"
        android:id="@+id/lin_sname"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/lin_fname"
        app:layout_constraintLeft_toLeftOf="parent"></TextView>
    <TextView
         android:layout_width="wrap_content"
          android:layout_height="wrap_content"
        android:id="@+id/lin_group"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/lin_sname"
        app:layout_constraintLeft_toLeftOf="parent"></TextView>
    <TextView
         android:layout_width="wrap_content"
          android:layout_height="wrap_content"
        android:id="@+id/lin_grade"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/lin_group"
        app:layout_constraintLeft_toLeftOf="parent"></TextView>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Back"
        android:onClick="goBack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>